---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = 'Política de Privacidade — SEOFY';
const description = 'Política de privacidade da SEOFY.';
---

<Layout title={title} description={description}>
  <Header />
  <main class="mx-auto max-w-4xl px-4 py-12">
    <h1 class="text-3xl font-black tracking-tight">Política de Privacidade</h1>
    <p class="mt-4 text-slate-300">A SEOFY respeita sua privacidade e protege os dados coletados em formulários e canais de contato.</p>
  </main>
  <Footer />
</Layout>
