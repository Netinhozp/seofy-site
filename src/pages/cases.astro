---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = 'Portfólio — SEOFY';
const description = 'Exemplos de qualidade de sites da SEOFY.';
---

<Layout title={title} description={description}>
  <Header />

  <main class="mx-auto max-w-6xl px-4 py-12">
    <h1 class="text-4xl font-black tracking-tight">Portfólio</h1>
    <p class="mt-3 max-w-3xl text-slate-300">
      Os cards com demonstração ao vivo estão na página inicial para facilitar sua navegação.
    </p>
    <div class="mt-6">
      <a class="rounded-xl bg-indigo-500 px-4 py-2 text-sm font-semibold text-white hover:bg-indigo-400" href="/">Ver cards na Home</a>
    </div>
  </main>

  <Footer />
</Layout>
