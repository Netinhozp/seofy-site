---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = 'Portfólio de Sites por Nicho — SEOFY';
const description = 'Modelos e referências de sites para nichos locais: criação e aluguel de sites com foco em conversão.';
---

<Layout title={title} description={description}>
  <Header />

  <main class="mx-auto max-w-6xl px-4 py-12">
    <h1 class="text-4xl font-black tracking-tight">Portfólio por Nicho</h1>
    <p class="mt-3 max-w-3xl text-slate-300">
      Referências de sites que podemos construir para empresas locais, com foco em geração de leads e atendimento por WhatsApp.
    </p>

    <div class="mt-8 grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      {[
        ['Clínica Odontológica', 'Site institucional + captação de novos pacientes.'],
        ['Clínica de Estética', 'Página de serviços com CTA para avaliação.'],
        ['Advocacia', 'Posicionamento profissional + páginas por área.'],
        ['Imobiliária', 'Portfólio de imóveis + geração de leads.'],
        ['Oficina Mecânica', 'Serviços automotivos + contato rápido.'],
        ['Ar-condicionado', 'Instalação/manutenção com foco local.'],
        ['Energia Solar', 'Landing de orçamento e prova social.'],
        ['Locação de Equipamentos', 'Geradores, andaimes e climatizadores.'],
      ].map(([h, p]) => (
        <div class="rounded-3xl border border-white/10 bg-white/5 p-6">
          <div class="text-sm font-bold">{h}</div>
          <p class="mt-2 text-sm text-slate-300">{p}</p>
          <div class="mt-4 flex gap-2">
            <a class="rounded-lg border border-white/10 px-3 py-1 text-xs text-slate-100 hover:bg-white/10" href="https://astro.build/themes/details/astrowind/" target="_blank" rel="noopener">Ver referência</a>
            <a class="rounded-lg bg-indigo-500 px-3 py-1 text-xs font-semibold text-white hover:bg-indigo-400" href="/contato">Quero um site assim</a>
          </div>
        </div>
      ))}
    </div>
  </main>

  <Footer />
</Layout>
